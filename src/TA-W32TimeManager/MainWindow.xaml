<Window x:Class="W32TimeManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="基板分割機 PLC同期用" Height="400" Width="350"
        Background="#2d3748" WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3182ce"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Meiryo"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#805ad5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2a4d8f"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="14.018"/>
            <ColumnDefinition Width="50.982"/>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="228*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- タイトル -->
        <TextBlock Grid.Row="0" Text="時刻サービスマネージャー" 
                   FontFamily="Meiryo" FontSize="16" FontWeight="Bold"
                   Foreground="White" HorizontalAlignment="Left" 
                   Margin="45,15,0,10" Grid.ColumnSpan="4" Grid.Column="2"/>

        <!-- メインコンテンツ -->
        <StackPanel Grid.Row="1" Margin="10,10,10,10" Grid.ColumnSpan="6">

            <!-- ステータス表示 -->
            <Border Background="#4a5568" CornerRadius="8" Margin="0,0,0,15" Padding="15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- ステータスランプ -->
                    <Ellipse x:Name="StatusLamp" Width="15" Height="15" 
                             Fill="Red" Margin="0,0,10,0"/>
                    <!-- ステータステキスト -->
                    <TextBlock x:Name="StatusText" Text="Status: STOPPED" 
                               FontFamily="Meiryo" FontSize="20" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- W32Time開始ボタン -->
            <Button x:Name="StartButton" Content="時刻サービス開始" 
                    Style="{StaticResource ModernButton}"
                    Click="StartButton_Click"/>

            <!-- W32Time停止ボタン -->
            <Button x:Name="StopButton" Content="時刻サービス停止" 
                    Style="{StaticResource ModernButton}"
                    Click="StopButton_Click"/>

            <!-- スタートアップ登録ボタン -->
            <Button x:Name="StartupButton" Content="時刻サービス スタートアップ登録" 
                    Style="{StaticResource ModernButton}"
                    Click="StartupButton_Click"/>

            <!-- プログレスバー -->
            <ProgressBar x:Name="ProgressBar" Height="8" Margin="10"
                         Background="#4a5568" Foreground="#38a169"
                         Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
